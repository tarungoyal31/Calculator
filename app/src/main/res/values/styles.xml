<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="calculator_button">
        <item name="android:textSize">@dimen/calculator_button_text_size</item>
        <item name="android:background">@android:color/holo_orange_dark</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="calculator_button.number">
        <item name="android:onClick">onNumberClick</item>
        <item name="android:background">@drawable/calculator_button_gray</item>
    </style>

    <style name="calculator_button.unary_operation">
        <item name="android:onClick">onUnaryOperationClick</item>
        <item name="android:background">@drawable/calculator_button_gray</item>
    </style>

    <style name="calculator_button.operation">
        <item name="android:onClick">onOperationClick</item>
        <item name="android:background">@drawable/calculator_button_orange</item>
    </style>
    <style name="calculator_button.operation.advance">
        <item name="android:background">@drawable/calculator_button_gray</item>
    </style>

</resources>
